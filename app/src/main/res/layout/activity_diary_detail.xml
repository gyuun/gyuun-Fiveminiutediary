<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Date Header -->
        <TextView
            android:id="@+id/dateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2025.05.22"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="24dp"
            android:layout_gravity="center_horizontal" />

        <!-- Title Input -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:strokeWidth="0dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/titleEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="20dp"
                    android:hint="Title (AI will generate if empty)"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_secondary"
                    android:background="@android:color/transparent"
                    android:maxLines="2"
                    android:gravity="top" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/generateTitleButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:text="ðŸ¤–"
                    android:textSize="18sp"
                    android:minWidth="48dp"
                    android:backgroundTint="@color/accent_blue"
                    app:cornerRadius="24dp"
                    style="@style/Widget.Material3.Button" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Body Input -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:strokeWidth="0dp"
            android:backgroundTint="#FFFFFF">

            <EditText
                android:id="@+id/bodyEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="250dp"
                android:padding="20dp"
                android:hint="Write your diary content here..."
                android:textSize="15sp"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"
                android:background="@android:color/transparent"
                android:gravity="top"
                android:inputType="textMultiLine|textCapSentences"
                android:scrollbars="vertical" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Image Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:strokeWidth="0dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Image Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Photos"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/addImageButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+ Add Photo"
                        android:textSize="12sp"
                        android:backgroundTint="@color/accent_blue"
                        app:cornerRadius="20dp"
                        style="@style/Widget.Material3.Button" />

                </LinearLayout>

                <!-- Image Grid -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/imageRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- AI Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:strokeWidth="0dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- AI Section Header -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ¤– AI Extension"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/accent_purple"
                    android:gravity="center"
                    android:layout_marginBottom="16dp" />

                <!-- AI Response Area -->
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxHeight="200dp">

                    <TextView
                        android:id="@+id/aiResponseTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="80dp"
                        android:padding="16dp"
                        android:text="Write your diary and get AI help to extend it!"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary"
                        android:background="@color/background_light"
                        android:gravity="top"
                        android:textIsSelectable="true"
                        app:cornerRadius="12dp" />

                </ScrollView>

                <!-- AI Action Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    android:gravity="center">

                    <!-- Accept Button (Initially Hidden) -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/acceptAiButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="âœ“ Accept"
                        android:textSize="14sp"
                        android:backgroundTint="@color/accent_green"
                        app:cornerRadius="24dp"
                        android:visibility="gone"
                        style="@style/Widget.Material3.Button" />

                    <!-- Reject Button (Initially Hidden) -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/rejectAiButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="âœ— Reject"
                        android:textSize="14sp"
                        android:backgroundTint="@color/accent_red"
                        app:cornerRadius="24dp"
                        android:visibility="gone"
                        style="@style/Widget.Material3.Button" />

                    <!-- AI Help Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/askAiButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸš€ AI Help"
                        android:textSize="16sp"
                        android:backgroundTint="@color/accent_purple"
                        app:cornerRadius="24dp"
                        style="@style/Widget.Material3.Button" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="20dp">


            <!-- Back Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/backButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Back"
                android:textSize="16sp"
                android:backgroundTint="@color/accent_gray"
                app:cornerRadius="28dp"
                style="@style/Widget.Material3.Button" />

            <!-- Delete Button (Only visible when editing) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/deleteButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Delete"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/accent_red"
                app:cornerRadius="28dp"
                android:visibility="gone"
                style="@style/Widget.Material3.Button" />

            <!-- Save Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/saveButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Save"
                android:textSize="16sp"
                android:backgroundTint="@color/accent_green"
                app:cornerRadius="28dp"
                style="@style/Widget.Material3.Button" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
